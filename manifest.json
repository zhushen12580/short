{
  "manifest_version": 3,
  "name": "精准截图 - 智能一键精准截图工具",
  "version": "1.5.0",
  "description": "智能识别网页内容，一键完成预设比例截图。支持自动对齐、连续截图模式，让截图更轻松高效。适用于设计师、运营、电商等场景",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "description": "打开扩展弹出窗口"
    },
    "screenshot_start": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "开始截图"
    },
    "screenshot_confirm": {
      "description": "确认截图"
    },
    "screenshot_cancel": {
      "description": "取消截图"
    }
  }
} 