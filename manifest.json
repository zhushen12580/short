{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "2.8",
  "description": "__MSG_appDescription__",
  "default_locale": "zh_CN",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "tabs",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://open.bigmodel.cn/api/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "description": "__MSG_openPopup__"
    },
    "screenshot_start": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "__MSG_startScreenshot__"
    },
    "screenshot_confirm": {
      "description": "__MSG_confirmScreenshot__"
    },
    "screenshot_cancel": {
      "description": "__MSG_cancelScreenshot__"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ai_dialog/dialog.html",
        "ai_dialog/dialog.js",
        "ai_dialog/dialog.css",
        "ai_dialog/lib/*",
        "config.js",
        "config.local.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "lib/jsQR.js",
      "content/bgremove-helper.js",
      "content/content.js"
    ],
    "css": []
  }]
} 